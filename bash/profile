# function wrapper for brew to ensure we're using system ruby for vim compilation
function storeOutput() { var=$(cat); }
function brew() {
  rvm current | storeOutput
  rvm use system > /dev/null
  /usr/local/bin/brew $*
  rvm use $var > /dev/null
}

